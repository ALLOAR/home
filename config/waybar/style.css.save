* {
    border: none;
    font-family: "JetBrains Mono Nerd Font";
    font-size: 13px;
    min-height: 0;
}

window#waybar {
    background-color: rgba(0, 0, 0, 0.0);
    color: #ffffff;
}

#custom-launcher {
    background-color: transparent;
    color: #89b4fa;
    font-size: 24px;
    padding: 0 12px;
    margin: 4px 0;
}

#workspaces button {
    /*background: transparent;*/
    color: #cdd6f4;
    margin: 4px 2px;
    padding: 0 8px;
}

#workspaces button.active {
    background: #585b70;
    border-radius: 4px;
}

#cpu, #clock, #memory, #pulseaudrio {
    background-color: rgba(30, 30, 46, 0.8);
    padding: 4px 12px;
    margin: 4px 0;
    border-radius: 8px;
}


#custom-power {
    background-color: transparent;
    color: #f38ba8;
    font-size: 20px;
    padding: 0 12px;
    margin: 4px 0;
}
