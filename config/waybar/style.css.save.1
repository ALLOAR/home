* {
    border: none;
    font-family: "JetBrains Mono Nerd Font";
    font-size: 13px;
    min-height: 0;
}

window#waybar {
    background-color: rgba(0, 0, 0, 0.0);
    color: #ffffff;
}

#custom-launcher {
    background-color: transparent;
    color: #89b4fa;
    font-size: 20px;
    padding: 0 10px;
    margin: 2px 0;
}


#workspaces button {
    color: #cdd6f4;
    margin: 2px 1px;
    padding: 0 8px;
    background: transparent;
    border: none; /* убираем стандартную рамку */
}

#workspaces button.active {
    background: transparent; /* убираем фон */
    border: 2px solid #1348b2; /* розово-жёлтый контур (примерно) */
    border-radius: 4px;
}

#temperature {
    border-bottom: 1px solid #88c0d0;
    background-color: #0F1218;
    padding: 0px 12px;
    margin: 0px 0;
    border-bottom-left-radius: 20px;
}

#clock{
	border-bottom: 1px solid #88c0d0;	
	background-color: #0F1218;
	padding: 2px 6px; /* 2 - сверху снизу, 6 - српава, слева*/
	margin: 0px 0;
	border-radius: 0px;
}
#disk{ 
    background-color: #2A3239;
    padding: 0px 12px; /* 10px сверху, 20px справа, 30px снизу, 40px слева */
    margin: 0px 0;
    border-bottom-right-radius: 20px;
    border-bottom: 1px solid #88c0d0;
}
#battery{
    background-color: #2A3239;
    padding: 0px 12px; /* 10px сверху, 20px справа, 30px снизу, 40px слева */
    margin: 0px 0;
    border-bottom: 1px solid #88c0d0;
}
#network{
    background-color: #2A3239;
    padding: 0px 12px; /* 10px сверху, 20px справа, 30px снизу, 40px слева */
    margin: 0px 0;
    border-radius: 0px;
    border-bottom-left-radius: 20px;
    border-bottom: 1px solid #88c0d0;
}
#pulseaudio {
 	border-bottom: 1px solid #88c0d0;
        background-color: #0F1218;
        padding: 0px 12px 4px 12px;
        margin: 0px 0;
	border-bottom-right-radius: 20px
}
#memory {
	border-bottom: 1px solid #88c0d0; 
        background-color: #0F1218;
        padding: 2px 6px;
        margin: 0px 0;
        border-radius: 0px;
}
#cpu{
	border-bottom: 1px solid #88c0d0; 
        background-color: #0F1218;
        padding: 0px 10px;
        margin: 0px 0;
        border-radius: 0px;
}
#custom-power {
    background-color: transparent;
    color: #f38ba8;
    font-size: 20px;
    padding: 0 12px;
    margin: 0px 0;
}

