background {
    path = ~/Downloads/wallpaper2.jpg
    blur_size = 4
    blur_passes = 2
}

input-field {
    monitor = eDP-1
    size = 200, 40
    outline_thickness = 2
    dots_center = true
    outer_color = rgba(ffffffff)
    inner_color = rgba(000000aa)
    font_color = rgba(ffffffcc)
    fade_on_empty = false
    placeholder_text = "Введите пароль..."
    position = 0, 0
    halign = center
    valign = center
}
